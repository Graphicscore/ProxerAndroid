<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="colorLink">?attr/colorSecondary</item>

        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <item name="windowActionModeOverlay">true</item>

        <item name="autoCompleteTextViewStyle">@style/Widget.App.AutoCompleteTextView</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Material</item>
        <item name="appBarLayoutStyle">@style/Widget.App.AppBarLayout</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <item name="asp_preferenceIconTint">?attr/colorSecondary</item>
        <item name="asp_preferenceDialogIconTint">?asp_preferenceIconTint</item>

        <item name="about_libraries_card">?attr/colorSurface</item>
        <item name="about_libraries_text_description">?android:attr/textColorPrimary</item>
        <item name="about_libraries_title_openSource">?android:attr/textColorPrimary</item>
        <item name="about_libraries_text_openSource">?android:attr/textColorSecondary</item>
        <item name="about_libraries_dividerLight_openSource">?attr/colorDivider</item>
        <item name="about_libraries_dividerDark_openSource">?attr/colorDivider</item>

        <item name="material_drawer_legacy_style">true</item>
        <item name="material_drawer_background">?android:attr/windowBackground</item>
        <item name="material_drawer_primary_text">?android:attr/textColorPrimary</item>
        <item name="material_drawer_primary_icon">?attr/colorIcon</item>
        <item name="material_drawer_secondary_text">?android:attr/textColorTertiary</item>
        <item name="material_drawer_selected">?attr/colorSelectedBackground</item>
        <item name="material_drawer_selected_legacy">?attr/colorSelectedBackground</item>
        <item name="material_drawer_selected_text">?attr/colorSecondary</item>
        <item name="material_drawer_divider">?attr/colorDivider</item>

        <item name="md_color_button_text">?attr/colorSecondary</item>

        <item name="emojiIcons">?attr/colorIcon</item>
        <item name="emojiDivider">?attr/colorDivider</item>
        <item name="emojiBackground">?attr/colorSurface</item>
    </style>

    <style name="Base.Theme.App.DayNight" parent="Base.Theme.App">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSelectedBackground">@color/selected_background</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSelectedSurface">@color/selected_surface</item>

        <item name="colorDivider">@color/divider</item>
        <item name="colorIcon">@color/icon</item>
        <item name="colorIconDisabled">@color/icon_disabled</item>

        <item name="colorFastscrollTrack">@color/fastscroll_track</item>
        <item name="colorFastscrollThumb">@color/fastscroll_thumb</item>
    </style>

    <style name="Fragment.App.AboutFragment" parent="Theme.Mal.Light.DarkActionBar" />

    <style name="ThemeOverlay.App" parent="@style/ThemeOverlay.MaterialComponents.Light" />

    <style name="Theme.Placeholder.App.Splash" parent="Base.Theme.App">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Placeholder.App.Splash.NoBackground" parent="Theme.Placeholder.App.Splash">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Widget.App.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
    </style>

    <style name="Widget.App.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.App</item>
        <item name="colorControlNormal">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">1dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">@style/Widget.App.TextInputLayout.Theme</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
        <item name="boxBackgroundMode">none</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="Widget.App.TextInputLayout.Theme">
        <item name="colorControlNormal">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorPrimaryLight</item>
    </style>

    <style name="DefaultCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">@dimen/default_image_card_width</item>
        <item name="android:layout_height">@dimen/default_image_card_height</item>
    </style>

    <style name="DefaultCardStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="cardBackground">@null</item>
    </style>

    <style name="DefaultCardTheme" parent="Theme.Leanback">
        <item name="imageCardViewStyle">@style/DefaultCardStyle</item>
        <item name="imageCardViewImageStyle">@style/DefaultCardImageStyle</item>
    </style>

    <style name="Theme.LeanbackDetails" parent="Theme.Leanback.Details">
        <item name="android:colorPrimary">#9C0000</item>
    </style>

    <style name="TVActionTextBlack">
        <item name="android:textSize">@dimen/lb_action_text_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TV_ActionButtonStyle" parent="Widget.Leanback.DetailsActionButtonStyleBase">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/TVActionTextBlack</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:drawablePadding">@dimen/lb_action_icon_margin</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingStart">@dimen/lb_action_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/lb_action_padding_horizontal</item>
    </style>
</resources>
